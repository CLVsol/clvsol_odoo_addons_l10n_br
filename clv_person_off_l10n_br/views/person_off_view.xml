<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="clv_person_off_view_form_l10n_br" model="ir.ui.view">
            <field name="name">clv.person.off.form</field>
            <field name="model">clv.person.off</field>
            <field name="inherit_id" ref="clv_person_off.clv_person_off_view_form"/>
            <field name="arch" type="xml">
                <field name="street" position="after">
                    <field name="number" placeholder="Number"/>
                </field>
                <field name="street2" position="after">
                    <field name="district" placeholder="Disctrict" class="o_address_street"/>
                </field>
                <field name="zip" position="after">
                    <button name="zip_search" type="object" class="oe_inline, oe_edit_only">
                        <i class="fa fa-search"></i>
                    </button>
                    <field name="l10n_br_city_id" placeholder="City" class="o_address_street" options='{"no_open": True, "no_create": True}'/>
                </field>
            </field>
        </record>

    </data>
</openerp>
