<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="clv_address_view_form_l10n_br" model="ir.ui.view">
            <field name="name">clv.address.form</field>
            <field name="model">clv.address</field>
            <field name="inherit_id" ref="clv_address.clv_address_view_form"/>
            <field name="arch" type="xml">
                <field name="street2" position="replace"/>
                <field name="zip" position="replace"/>
                <field name="street" position="replace">
                    <field name="street" placeholder="Street..." class="o_address_street" default_focus="1"/>
                    <field name="number" placeholder="Number"/>
                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                    <field name="district" placeholder="Disctrict" class="o_address_street"/>
                    <field name="zip" placeholder="CEP" class="o_address_zip"/>
                </field>
                <field name="state_id" position="attributes">
                    <attribute name="domain">[('country_id','=',country_id)]
                    </attribute>
                </field>
                <field name="state_id" position="before">
                    <!--field name="l10n_br_city_id" placeholder="City" class="o_address_city" options='{"no_open": True, "no_create": True}'/-->
                    <field name="l10n_br_city_id" placeholder="City" class="o_address_street" options='{"no_open": True, "no_create": True}'/>
                </field>
                <field name="city" position="replace">
                    <field name="city" invisible="1"/>
                </field>
                <field name="zip" position="attributes">
                    <attribute name="style">width: 50%</attribute>
                </field>
                <field name="zip" position="after">
                    <button name="zip_search" type="object" class="oe_inline, oe_edit_only">
                        <i class="fa fa-search"></i>
                    </button>
                </field>
                <group name="settings" position="inside">
                    <field name="use_district"/>
                </group>
            </field>
        </record>

        <record id="clv_address_view_tree_l10n_br" model="ir.ui.view">
            <field name="name">clv.address.tree</field>
            <field name="model">clv.address</field>
            <field name="inherit_id" ref="clv_address.clv_address_view_tree"/>
            <field name="arch" type="xml">
                <field name="city" position="replace">
                    <field name="l10n_br_city_id" invisible="1"/>
                </field>
            </field>
        </record>

        <record id="clv_address_view_search_l10n_br" model="ir.ui.view">
            <field name="name">clv.address.filter</field>
            <field name="model">clv.address</field>
            <field name="inherit_id" ref="clv_address.clv_address_view_search"/>
            <field name="arch" type="xml">
                <field name="city" position="replace">
                    <field name="l10n_br_city_id"/>
                </field>
                <filter name="city" position="replace">
                    <filter name="city" string="City" context="{'group_by': 'l10n_br_city_id'}"/>
                    <filter name="district" string="District" context="{'group_by': 'district'}"/>
                </filter>
            </field>
        </record>

    </data>
</openerp>
